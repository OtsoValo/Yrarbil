                <TextBox x:Name="borrowbookid" TextWrapping="Wrap" Text="" Width="251" Margin="0,5,0,0" />
            </StackPanel>
            <StackPanel Height="40"  Orientation="Horizontal" Margin="3,40,9.6,0">
